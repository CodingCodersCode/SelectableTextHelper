<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_price_type_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_msg_view_detail_arrow_right"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1"
                android:text="123这是测试文本，这是测试文本123这是测试文本，这是测试文本123这是测试文本，这是测试文本"
                android:textColor="#222222"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/ll_price_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:text="测试标题"
                    android:textColor="#888888"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_price_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_msg_view_detail_arrow_right"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:text="123这是测试文本，这是测试文本123这是测试文本，这是测试文本123这是测试文本，这是测试文本"
                    android:textColor="#222222"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_test_1"
                style="@style/TextView_Normal_Style"
                android:text="@string/long_text_1"
                android:textColor="@color/text_gray"/>

            <TextView
                android:id="@+id/tv_test_2"
                style="@style/TextView_Normal_Style"
                android:text="@string/long_text_2"
                android:textColor="@color/text_dark"/>
            <TextView
                android:id="@+id/tv_test_3"
                style="@style/TextView_Normal_Style"
                android:text="@string/long_text_3"
                android:textColor="@color/text_gray"/>
            <TextView
                android:id="@+id/tv_test_4"
                style="@style/TextView_Normal_Style"
                android:text="@string/long_text_4"
                android:textColor="@color/text_dark"/>

            <TextView
                android:id="@+id/tv_test_5"
                style="@style/TextView_Normal_Style"
                android:text="@string/long_text_5"
                android:textColor="@color/text_gray"/>
            <TextView
                android:id="@+id/tv_test_6"
                style="@style/TextView_Normal_Style"
                android:text="@string/long_text_6"
                android:textColor="@color/text_dark"/>



        </LinearLayout>

    </ScrollView>

</LinearLayout>
